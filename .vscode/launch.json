    "version": "0.2.0",
    "inputs": [
        {
            "id": "dbImage",
            "type": "promptString",
            "description": "Docker image to use for -db-image argument",
            "default": "mimdb:latest"
        }
    ],
    "configurations": [
        {
            "name": "All V1 tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/pit/tests",
            "args": [
                "-test.v",
                "-db-run-docker",
                "true",
                "-db-image",
                "${input:dbImage}",
                "--db-port", "8080",
                "--interface-version",
                "1"
            ]
        },
        {
            "name": "Copy_Success_Headless",
            "type": "go",
            "request": "launch",
            "mode": "test",
